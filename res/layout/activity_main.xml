<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/ll_fs_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
			android:layout_alignParentLeft="true"
            android:background="#ffffffff"
            android:text="取 消"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerInParent="true"
            android:textSize="20dp"
            android:layout_weight="4"
            android:text="日记" />

        <Button
            android:id="@+id/bt_test"
            android:layout_width="60dp"
            android:layout_height="40dp"
			android:layout_alignParentRight="true"
            android:background="#ffffffff"
            android:text="保 存"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

     <EditText
        android:id="@+id/et_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_fs_head"
        android:layout_marginTop="10dp"
        android:minLines="3"
        android:gravity="left|top"  
        android:ems="10"
        android:hint="说点什么吧" >
        <requestFocus />
    </EditText>
    <com.wnc.xinxin.FlowLayout
        android:id="@+id/tag_vessel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_memo"
        android:layout_marginTop="5dp" >
        <ImageView
            android:id="@+id/add_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/mylablepen" />
    </com.wnc.xinxin.FlowLayout>
    
    <RelativeLayout
        android:id="@+id/tag_vessel2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tag_vessel"
        android:background="@drawable/home_item_date_bg"
         >
          <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="16dp"
            android:textStyle="bold"
            android:text="13" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
			  android:layout_below="@+id/tv_day"
			  android:layout_marginTop="0dp"
              android:text="2016.12"
              android:textSize="10dp" />

        </RelativeLayout>
    
   

    <AbsoluteLayout
        android:id="@+id/ll_piczone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tag_vessel2"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imgview_add_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fs_add" >
        </ImageView>
    </AbsoluteLayout>

</RelativeLayout>
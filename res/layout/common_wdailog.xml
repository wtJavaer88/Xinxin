<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
     >

    <com.wnc.xinxin.ProgressWheel
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barWidth="20dp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:rimWidth="20dp"
        ProgressWheel:spinSpeed="3dp"
        ProgressWheel:textColor="#222222"
        ProgressWheel:textSize="12sp" />
    
	<TextView
        android:id="@+id/tvBUResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="正在备份"
        android:textColor="@color/black"
        android:visibility="visible"
        android:textSize="20dip" />
</LinearLayout>